g = function(theta,y,log=FALSE) dnorm(theta,y,log=log)

n = 1e2
d = data.frame(x = rnorm(n,y), 
               u = runif(n)) %>%
  mutate(u_scaled = u*M*g(x,y),
         accept   = u_scaled < q(x,y))

