plot_arrows = function(u, ...) {
  arrows(-100, u, qnorm(u,...), u, col='blue')
  arrows(qnorm(u,...), u, qnorm(u,...), 0, col='blue') 
}

for (u in c(.1,.95)) plot_arrows(u)

