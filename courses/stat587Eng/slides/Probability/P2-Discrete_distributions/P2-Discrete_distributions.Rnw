	geom_segment(size=2) +
  geom_point(data = data.frame(x=7.5,y=-0.01,pmf=0), aes(x,y), shape=24, color='red', fill='red') +
	scale_x_continuous(breaks=3:12) +
  theme_bw()
@
\end{frame}



