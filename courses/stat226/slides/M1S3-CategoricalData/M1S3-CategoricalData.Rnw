\subsection{Mode}
\begin{frame}[fragile]
\frametitle{Mode}
\begin{definition}
The \alert{mode} is the most common value. 
\pause
The mode may not be unique.
\end{definition}

\vspace{0.1in} \pause

<<>>=
table(d$Major)
table(d$College)
table(d$Year)
@
\end{frame}



\subsection{Median}
\begin{frame}[fragile]
\begin{definition}
The \alert{median} of an ordinal variable is the middle value when the values
are ordered.
\end{definition}

\vspace{0.1in} \pause

<<size='tiny'>>=
sort(d$Year)
@

\end{frame}


\subsection{Contingency table}
\begin{frame}[fragile]
\frametitle{Contingency table}

\begin{definition}
A \alert{contingency table} shows the distribution of one variable in the rows 
and another in the columns. 
\end{definition}

\vspace{0.1in} \pause

<<>>=
with(d, table(Major,Year))
@
\end{frame}

