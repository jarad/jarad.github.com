@
\end{frame}




\begin{frame}[fragile]
\frametitle{Recode Year}
<<size="small">>=
d <- d %>% 
  mutate(Year = recode(Clsfn.Year, 
                       `1` = "Freshman", `2` = "Sophomore",
                       `3` = "Junior",   `4` = "Senior") %>% 
           factor(levels = c("Freshman","Sophomore","Junior","Senior")))

summary(d)
@
\end{frame}


